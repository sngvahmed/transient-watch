<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="transientwatch.com.transientwatch.Controller.DetailsController.DetailsActivity"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:textAlignment="gravity"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="name"
                android:id="@+id/item_name"
                android:textColor="#FFFFFF"
            />
            <TextView
                android:textAlignment="gravity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/ra"
                android:text="ra"
                android:textSize="20dp"
                android:textColor="#fff"
                />
            <TextView
                android:textAlignment="gravity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/dec"
                android:text="DEC"
                android:textSize="20dp"
                android:textColor="#fff"
                />
            <TextView
                android:textAlignment="gravity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/orpital_period"
                android:text="orpital period"
                android:textSize="20dp"
                android:textColor="#fff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="25dp"
            android:orientation="vertical" >

            <ImageView
                android:src="@drawable/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:text="Follow"
                android:textAlignment="gravity"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:textAlignment="gravity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Maxi   "
            android:textSize="30dp"
            android:textColor="#fff"
            />
        <TextView
            android:textAlignment="gravity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Maxi data"
            android:id="@+id/maxi_data"
            android:textSize="10dp"
            android:textColor="#fff"
            />
        </LinearLayout>

    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/maxi_change_prob"
        android:text="maxi change prob :"
        android:textSize="20dp"
        android:textColor="#fff"
    />
    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/maxi_avg"
        android:text="maxi average :"
        android:textSize="20dp"
        android:textColor="#fff"
    />


    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:textAlignment="gravity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Swift   "
            android:textSize="30dp"
            android:textColor="#fff"
            />
        <TextView
            android:textAlignment="gravity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="swift_data"
            android:id="@+id/swift_data"
            android:textSize="10dp"
            android:textColor="#fff"
            />
    </LinearLayout>
    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/swift_change_prob"
        android:text="swift change prob: "
        android:textSize="20dp"
        android:textColor="#fff"
        />
    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/swift_avg"
        android:text="swift average :"
        android:textSize="20dp"
        android:textColor="#fff"
        />



    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:textAlignment="gravity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fermi   "
            android:textSize="30dp"
            android:textColor="#fff"
            />
        <TextView
            android:textAlignment="gravity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="fermi_data"
            android:id="@+id/fermi_data"
            android:textSize="10dp"
            android:textColor="#fff"
            />
    </LinearLayout>
    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/fermi_change_prob"
        android:text="swift change prob: "
        android:textSize="20dp"
        android:textColor="#fff"
        />
    <TextView
        android:textAlignment="gravity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/fermi_avg"
        android:text="swift average :"
        android:textSize="20dp"
        android:textColor="#fff"
        />


</LinearLayout>
